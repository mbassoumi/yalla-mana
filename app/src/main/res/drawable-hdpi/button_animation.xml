<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#cdf1ca"
                android:endColor="#f7f9f7"
                android:angle="45"></gradient>
            <corners android:radius="150dp"></corners>
            <padding android:bottom="5pt" android:left="5pt"
                android:right="8pt" android:top="5pt"></padding>
            <stroke android:color="#4CAF50" android:width="2dp"> </stroke>
        </shape>

    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#cdf1ca"
                android:endColor="#f7f9f7"
                android:angle="45"></gradient>
            <corners android:radius="0dp"></corners>
            <padding android:bottom="5pt" android:left="5pt"
                android:right="8pt" android:top="5pt"></padding>
            <stroke android:color="#4CAF50" android:width="2dp"> </stroke>
        </shape>
    </item>
</selector>