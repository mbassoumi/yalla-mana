<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.graduation.yallamana.presenation.login.LoginActivity">

    <FrameLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
       >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="8dp">


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4CAF50"
                >
            </android.support.v7.widget.Toolbar>


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="65dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <EditText
                android:id="@+id/user_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="78dp"
                android:ems="10"
                android:inputType="phone"
                android:textColor="#4CAF50" />

            <Button
                android:id="@+id/yallaButton"
                style="@style/MyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_phone"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="74dp"
                android:background="@drawable/mybutton"
                android:text="@string/yalla"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/signupButton"
                style="@style/MyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignLeft="@+id/yallaButton"
                android:layout_below="@+id/yallaButton"

                android:layout_marginTop="25dp"
                android:background="@android:color/transparent"
                android:text="@string/sign_up"

                android:textColor="#4CAF50"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/user_phone"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/user_phone"
                android:layout_toStartOf="@+id/user_phone"
               android:src="@drawable/ic_call_black_24dp" />
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/contaner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"


            >

        </FrameLayout>
    </FrameLayout>

</android.support.constraint.ConstraintLayout>
