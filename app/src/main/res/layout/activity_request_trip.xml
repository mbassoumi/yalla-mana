<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />


        <RelativeLayout
            android:id="@+id/rel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:background="@drawable/btn">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/req_from_offer"
                android:textColor="#000000"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/requested_trip_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView7"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:hint="Ramallah                                "
                android:textColor="#000000"
                android:textSize="18dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rel2"
            android:background="@drawable/btn">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/req_to_offer"
                android:textColor="#000000"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/requested_trip_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView8"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:hint="Al-Bireh                                  "
                android:textColor="#000000"
                android:textSize="18dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rel3"

            android:background="@drawable/btn">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/requested_time"
                android:textColor="#000000"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/requested_trip_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView9"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:hint="12-12-2012"
                android:textColor="#000000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/requested_trip_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView9"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/requested_trip_time1"
                android:hint="7:00 "
                android:textColor="#000000"
                android:textSize="18dp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/requested_trip_time2"
                android:layout_alignBottom="@+id/requested_trip_time2"
                android:layout_toEndOf="@+id/requested_trip_time2"
                android:layout_toRightOf="@+id/requested_trip_time2"
                android:dropDownWidth="match_parent"
                android:entries="@array/date_arrays"
                android:popupBackground="@color/green"
                android:spinnerMode="dialog"
                android:visibility="visible" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rel4"
            android:background="@drawable/btn"
            android:id="@+id/relativeLayout2">

            <TextView
                android:id="@+id/text10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/number_of_riders"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"
                android:textSize="18dp" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/yalla_Button"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"

                android:layout_toRightOf="@+id/text10"
                android:entries="@array/seat_arrays"
                android:prompt="@string/seat_prompt" />
        </RelativeLayout>

        <Button
            android:id="@+id/request_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/relativeLayout2"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="47dp"
            android:background="@drawable/mybutton"
            android:text="@string/request"
            android:textColor="@color/white" />




    </RelativeLayout>
</ScrollView>
</android.support.constraint.ConstraintLayout>
