<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.graduation.yallamana.VarificationFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFFFF">

        <EditText
            android:id="@+id/varifiCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="171dp"
            android:ems="10"
            android:hint="_ _ _ _"
            android:inputType="number"
            android:selectAllOnFocus="false"
            android:singleLine="true"
            android:textAlignment="center" />

        <Button
            android:id="@+id/yallaButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yalla"
            android:textColor="#FFFFFFFF"
            android:layout_centerVertical="true"
            android:background="#4CAF50"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/yallaButton"
            android:layout_alignStart="@+id/yallaButton"
            android:layout_below="@+id/yallaButton"
            android:layout_marginTop="22dp"
            android:textColor="#4CAF50"
            android:background="#FFFFFFFF"
            android:text="@string/try_again" />
    </RelativeLayout>
</FrameLayout>
