<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Edit_account">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.625">

        <include layout="@layout/toolbar"
            android:id="@+id/toolbar_edit_account"
         />

        <ImageButton
            android:id="@+id/imageButton_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="51dp"
            android:layout_marginStart="51dp"
            android:layout_marginTop="18dp"
            app:srcCompat="@drawable/ic_person_outline_black_24dp"
            tools:ignore="VectorDrawableCompat"
            android:layout_below="@+id/_edit_account"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@id/imageButton_edit"
            android:id="@+id/space2" />


        <TextView
            android:id="@+id/Firt_nameV_edit_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/first_name"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_below="@+id/space2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/Firtnamev_E_edit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="@string/name"
            android:layout_below="@+id/Firt_nameV_edit_account"
            android:layout_alignLeft="@+id/imageButton_edit"
            android:layout_alignStart="@+id/imageButton_edit" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:id="@+id/space3"
            android:layout_below="@+id/Firtnamev_E_edit"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:id="@+id/Last_nameV_edit_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/last_name"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_below="@+id/space3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <EditText
            android:id="@+id/Lastname_E_edit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="@string/name"
            android:layout_below="@+id/Last_nameV_edit_account"
            android:layout_alignLeft="@+id/Firtnamev_E_edit"
            android:layout_alignStart="@+id/Firtnamev_E_edit"
            android:layout_alignRight="@+id/Email_E_edit"
            android:layout_alignEnd="@+id/Email_E_edit" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:id="@+id/space4"
            android:layout_below="@+id/Lastname_E_edit"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/phone_V_edit"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/mobile_number"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_below="@+id/space4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0599123123"
            android:id="@+id/Phone_E_edit"
            android:layout_below="@+id/phone_V_edit"
            android:layout_alignLeft="@+id/Firtnamev_E_edit"
            android:layout_alignStart="@+id/Firtnamev_E_edit" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:id="@+id/space5"
            android:layout_below="@+id/Phone_E_edit"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:layout_width="match_parent"
            android:id="@+id/Email_V_edit"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="@string/email"
            android:layout_below="@+id/space5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

       <EditText
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/Email_E_edit"
           android:hint="example@example.com"
           android:layout_below="@+id/Email_V_edit"
           android:layout_alignLeft="@+id/Phone_E_edit"
           android:layout_alignStart="@+id/Phone_E_edit" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:id="@+id/space6"
            android:layout_below="@+id/Email_E_edit"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/Password_V_edit"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="@string/password"
            android:layout_below="@+id/space6"/>
        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_below="@+id/Password_V_edit"
            android:layout_alignLeft="@+id/Email_E_edit"
            android:layout_alignStart="@+id/Email_E_edit" />

        <Button
            android:id="@+id/Save_Button_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_animation"
            android:text="@string/save"
            android:textColor="#4CAF50"/>





    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
