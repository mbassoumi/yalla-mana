<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.graduation.yallamana.LoginActivity">

    <FrameLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="8dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="65dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <EditText
                android:id="@+id/user_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="78dp"
                android:ems="10"
                android:inputType="phone"
                android:textColor="#4CAF50" />

            <Button
                android:id="@+id/yallaButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_phone"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="74dp"
                android:background="#4CAF50"
                android:text="@string/yalla"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/signupButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/yallaButton"
                android:layout_alignLeft="@+id/yallaButton"
                android:layout_below="@+id/yallaButton"
                android:layout_marginTop="25dp"
                android:background="#FFFFFF"
                android:text="@string/sign_up"
                android:textColor="#4CAF50" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/user_phone"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/user_phone"
                android:layout_toStartOf="@+id/user_phone"
                app:srcCompat="@drawable/ic_call_black_24dp" />
        </RelativeLayout>
    </FrameLayout>

</android.support.constraint.ConstraintLayout>
