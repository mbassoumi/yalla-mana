<?xml version="1.0" encoding="UTF-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.graduation.yallamana.presenation.signup.SignupActivity">


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <RelativeLayout
            android:id="@+id/relt1"
            android:layout_width="368dp"
            android:layout_height="551dp"
            android:background="#FFFFFF">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="#4CAF50"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                android:title="@string/new_user"
                android:titleTextColor="#FFFFFF" />

            <EditText
                android:id="@+id/firstName"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/toolbar"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:hint="@string/first_name"
                android:inputType="textPersonName"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/lastName"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/firstName"
                android:layout_alignStart="@+id/firstName"
                android:layout_below="@+id/firstName"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="@string/last_name"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="-189dp"
                tools:layout_editor_absoluteY="169dp" />

            <ImageButton
                android:id="@+id/rider"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignEnd="@+id/lastName"
                android:layout_alignRight="@+id/lastName"
                android:layout_alignTop="@+id/driver"
                android:layout_marginEnd="26dp"
                android:layout_marginRight="26dp"
                android:background="#FFFFFF"
                android:scaleType="fitXY"
                android:src="@drawable/ic_person_outline_black_24dp" />

            <EditText
                android:id="@+id/mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/lastName"
                android:layout_alignStart="@+id/lastName"
                android:layout_below="@+id/lastName"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="@string/mobile_number"
                android:inputType="phone" />

            <EditText
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/mobile"
                android:layout_alignStart="@+id/mobile"
                android:layout_below="@+id/mobile"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="@string/email"
                android:inputType="textPersonName|textWebEmailAddress"
                tools:layout_editor_absoluteX="-154dp"
                tools:layout_editor_absoluteY="332dp" />


            <TextView
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/email"
                android:layout_alignStart="@+id/email"
                android:layout_below="@+id/email"
                android:layout_marginTop="16dp"
                android:hint="@string/gender"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinner5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/gender"
                android:layout_alignBottom="@+id/gender"
                android:layout_toLeftOf="@+id/driver"
                android:layout_toStartOf="@+id/driver"
                android:dropDownWidth="match_parent"
                android:entries="@array/gender_arrays"
                android:popupBackground="@color/green"
                android:prompt="@string/gender_prompt"
                android:spinnerMode="dialog"
                android:visibility="visible" />


            <ImageButton
                android:id="@+id/userImage"
                android:layout_width="150dp"
                android:layout_height="108dp"
                android:layout_alignEnd="@+id/driver"
                android:layout_alignRight="@+id/driver"
                android:layout_alignTop="@+id/firstName"
                android:background="@color/white"
                android:src="@drawable/ic_image_black_24dp" />

            <ImageButton
                android:id="@+id/driver"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/gender"
                android:layout_marginTop="21dp"
                android:layout_toEndOf="@+id/email"
                android:layout_toRightOf="@+id/email"
                android:background="#FFFFFF"
                android:src="@drawable/ic_directions_car_black_48dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignEnd="@+id/rider"
                android:layout_alignLeft="@+id/rider"
                android:layout_alignRight="@+id/rider"
                android:layout_alignStart="@+id/rider"
                android:layout_below="@+id/rider"
                android:text="@string/rider"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="#4CAF50"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignEnd="@+id/driver"
                android:layout_alignLeft="@+id/driver"
                android:layout_alignRight="@+id/driver"
                android:layout_alignStart="@+id/driver"
                android:layout_below="@+id/driver"
                android:text="@string/driver"
                android:textAlignment="center"
                android:textColor="#4CAF50"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_marginLeft="16dp"
                android:text="@string/connect_with"
                android:textColor="#4CAF50"
                android:textSize="18sp" />

            <com.google.android.gms.common.SignInButton
                android:id="@+id/sign_in_button"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignStart="@+id/textView3"
                android:layout_below="@+id/textView3"
                android:layout_marginTop="17dp"
                tools:layout_editor_absoluteX="54dp">

            </com.google.android.gms.common.SignInButton>

            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignLeft="@+id/sign_in_button"
                android:layout_alignStart="@+id/sign_in_button"
                android:layout_below="@+id/sign_in_button"
                android:layout_marginTop="14dp"
                tools:layout_editor_absoluteX="54dp"
                tools:layout_editor_absoluteY="564dp" />

        </RelativeLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>