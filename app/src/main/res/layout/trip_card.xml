<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_trip_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/trip_cover_height"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@drawable/person1" />

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/thumbnail"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="8dp"
                android:weightSum="2.2">

                <TextView
                    android:id="@+id/from"

                    android:layout_width="21dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="Ramallah"
                    android:paddingLeft="@dimen/trip_from_padding"
                    android:paddingRight="@dimen/trip_from_padding"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight=".1"
                    android:paddingLeft="@dimen/trip_from_padding"
                    android:paddingRight="@dimen/trip_from_padding"
                    android:text="->"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView2"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="Nablus"
                    android:paddingLeft="@dimen/trip_from_padding"
                    android:paddingRight="@dimen/trip_from_padding"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/overflow"
                    android:layout_width="@dimen/ic_trip_overflow_width"
                    android:layout_height="@dimen/ic_trip_overflow_height"
                    android:layout_below="@id/thumbnail"
                    android:layout_marginTop="4dp"
                    android:layout_weight=".1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_dots" />
            </LinearLayout>


            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@id/linear"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-condensed"
                android:hint="2-2-2017"
                android:text="2-2-2018"
                android:textColor="@color/grey_300"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:paddingRight="@dimen/trip_from_padding"
                android:text="20 Nis"
                android:textColor="@color/colorPrimary" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>